<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Registrar Usuario</h1>
        <div class="row">
            <div style="width: 30%; margin: 25px auto;" >
                <form action="/api/register" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="firstName" placeholder="Nombre">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="lastName" placeholder="Apellido(s)">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="username" placeholder="Usuario">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="email" placeholder="Email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="checkbox" name="isAdmin">
                </div>
                <div class="form-group">
                    <input class="form-control" type="checkbox" name="isActive">
                </div>
                <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Contraseña">
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="password" name="password" placeholder="Introduce su contraseña de nuevo">
                </div> -->
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Registrar</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ./partials/footer %>