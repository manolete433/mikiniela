<% include ../partials/header %>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="/javascripts/createUserFormValidation.js" type="text/javascript"></script>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Create User</h1>
            <div class="row">
                <div style="width: 30%; margin: 25px auto;">
                    <form action="/users/<%= user.id %>?_method=PUT" method="POST" name="createUserForm" id="createUserForm">
                        <div class="form-group control-group">
                            <label for="inputFirstName" class="control-label">First Name: </label>
                            <input class="form-control" type="text" name="inputFirstName" value="<%= user.firstName%>" maxlength="15" required>
                        </div>
                        <div class="form-group control-group">
                            <label for="inputLastName" class="control-label">Last Name: </label>
                            <input class="form-control" type="text" name="inputLastName" value="<%= user.lastName%>" maxlength="15" required>
                        </div>
                        <div class="form-group control-group">
                            <label for="inputUsername" class="control-label">Username: </label>
                            <input class="form-control" type="text" name="inputUsername" value="<%= user.username%>" " maxlength="15 " required>
                        </div>
                        <div class="form-group control-group ">
                            <label for="inputEmail " class="control-label ">Email: </label>
                            <input class="form-control " type="email " name="inputEmail" value="<%= user.email%>" required>
                        </div>
                        <div class="form-inline row" style="text-align: center;">
                            <div class="form-group control-group">
                                <label for="inputIsAdmin" class="control-label">Administrator: </label>
                                <input type="checkbox" name="inputIsAdmin" <% if (user.isAdmin) { %> checked <% } %>>
                            </div>
                            <div class="form-group control-group" style="text-align: center;">
                                <label for="inputIsActive" class="control-label">Active: </label>
                                <input class="form-control" type="checkbox" name="inputIsActive" <% if (user.isActive) { %> checked <% } %>>
                            </div>
                        </div>
                        <div class="form-group control-group">
                            <button class="btn btn-large btn-primary btn-block" type="Submit">Submit</button>
                        </div>
                    </form>
                    <a href="/users">Go Back</a>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>