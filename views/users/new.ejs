<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create User</h1>
        <div class="row">
            <div style="width: 30%; margin: 25px auto;" >
                <form action="/users" method="POST" data-toggle="validator" name="createUserForm" id="createUserForm">
                    <div class="form-group control-group">
                        <label for="inputFirstName" class="control-label">First Name: </label>
                        <input class="form-control" type="text" name="inputFirstName" placeholder="First Name" maxlength="15" required>
                    </div>
                    <div class="form-group control-group">
                        <label for="inputLastName" class="control-label">Last Name: </label>
                        <input class="form-control" type="text" name="inputLastName" placeholder="Last Name" maxlength="15" required>
                    </div>
                    <div class="form-group control-group">
                        <label for="inputUsername" class="control-label">Username: </label>
                        <input class="form-control" type="text" name="inputUsername" placeholder="Username" maxlength="15" required>
                    </div>
                    <div class="form-group control-group">
                        <label for="inputEmail" class="control-label">Email: </label>
                        <input class="form-control" type="email" name="inputEmail" placeholder="Email" required>
                    </div>
                    <div class="form-inline row" style="text-align: center;">
                        <div class="form-group control-group">
                            <label for="inputIsAdmin" class="control-label">Administrator: </label>
                            <input class="form-control" type="checkbox" name="inputIsAdmin">
                        </div>
                        <div class="form-group control-group" style="text-align: center;">
                            <label for="inputIsActive" class="control-label">Active: </label>
                            <input class="form-control" type="checkbox" name="inputIsActive" checked>
                        </div>
                    </div>
                    <div class="form-group control-group">
                        <label for="inputPassword" class="control-label">Password: </label>
                        <div class="form-inline row">
                                <div class="form-group col-sm-6">
                                <input type="password" minlength="8" maxlength="15" class="form-control" id="inputPassword" name="inputPassword" placeholder="Password" required>
                                <div class="help-block">Minimum 8 characters</div>
                                </div>
                            <div class="form-group col-sm-6">
                                <input type="password" class="form-control" placeholder="Confirm your password" id="inputPasswordConfirm" name="inputPasswordConfirm" required>
                            </div>
                        </div>
                    </div>
                    <div class="form-group control-group">
                        <button class="btn btn-large btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/users">Go Back</a>
            </div>
        </div>
    </div>
</div>

<!-- speparate in a special function v><-->
<script src="/public/js/createUserFormValidation.js" type="text/javascript"></script>
<!-- speparate in a special function v><-->

<script>
    $(document).ready(function () {
    jQuery.validator.addMethod("lettersonly", function (value, element) {
        return this.optional(element) || /^[a-z0-9_-]+$/i.test(value);
    }, "Please use only a-z0-9_-");
    $('#createUserForm').validate({
        rules: {
            inputFirstName: {
                minlength: 3,
                maxlength: 15,
                required: true,
                lettersonly: true
            },
            inputLastName: {
                minlength: 3,
                maxlength: 15,
                required: true,
                lettersonly: true
            },
            inputUsername: {
                minlength: 3,
                maxlength: 15,
                required: true,
                lettersonly: true
            },
            inputEmail: {
                required: true,
                email: true
            },
            inputPassword: {
                minlength: 8,
                maxlength: 15,
                required: true
            },
            inputPasswordConfirm:{
                equalTo: "#inputPassword"
            }
        },
        highlight: function (element) {
            $(element).closest('.control-group').addClass('has-error');
        },
        unhighlight: function (element) {
            $(element).closest('.control-group').removeClass('has-error');
        }
    });
});
</script>

<% include ../partials/footer %>