<% include ../partials/header %>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="/javascripts/createUserFormValidation.js" type="text/javascript"></script>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">
                <%= user.username %>
            </h1>
            <div class="row">
                <div style="width: 30%; margin: 25px auto;">
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <span>Name: </span>
                                </td>
                                <td>
                                    <span>
                                        <%= user.firstName %>
                                            <%= user.lastName %>
                                    </span>
                                </td>
                                <tr>
                                    <td>
                                        <span>Email: </span>
                                    </td>
                                    <td>
                                        <span>
                                            <%= user.email %>
                                        </span>
                                    </td>
                                </tr>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- Only if admin -->
                <div style="text-align: center;">
                    <!-- Below line is causing issues -->
                    <a class="btn btn-xs btn-warning" href="/users/<%= user.id %>/edit">Edit</a>
                    <form class="delete-form" action="/users/<%= user.id %>?_method=DELETE" method="POST">
                        <button class="btn btn-xs btn-danger">Deactivate</button>
                    </form>
                    <!-- Only if admin -->
                    <a href="/users">Go Back</a>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>