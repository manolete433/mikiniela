<% include ../partials/header %>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script src="/javascripts/createTeamFormValidation.js" type="text/javascript"></script>

    <div class="container">
        <div class="row">
            <h1 style="text-align: center;">Add Team</h1>
            <div class="row">
                <div style="width: 30%; margin: 25px auto;">
                    <form action="/teams" method="POST" data-toggle="validator" name="createTeamForm" id="createTeamForm">
                        <div class="form-group control-group">
                            <label for="inputName" class="control-label">Name: </label>
                            <input class="form-control" type="text" name="inputName" placeholder="Name" maxlength="15" required>
                        </div>
                        <div class="form-group control-group">
                            <label for="inputImageURL" class="control-label">Image URL: </label>
                            <input class="form-control" type="url" name="inputImageURL" placeholder="Image URL">
                        </div>
                        <div class="form-group control-group">
                            <button class="btn btn-large btn-primary btn-block" type="Submit">Submit</button>
                        </div>
                    </form>
                    <a href="/teams">Go Back</a>
                </div>
            </div>
        </div>
    </div>

    <% include ../partials/footer %>